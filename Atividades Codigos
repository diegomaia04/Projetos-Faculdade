        Scanner entrada = new Scanner (System.in);
      System.out.print("Para fazer o calculo da circuferencia,insira o reu raio");
      System.out.print("Raio: ");
      Double raio = entrada .nextDouble();
      
      Double circ = math.PI*raio*raio;
      
      System.out.println("A circuferencia e: " + circ);
      entrada.close();
